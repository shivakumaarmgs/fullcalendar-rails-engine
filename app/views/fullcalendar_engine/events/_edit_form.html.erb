<div id="form-ui-dialog-custom" class="col-sm-12">
  <%= form_for @event, :html => { :id => 'event_form', class: "form-horizontal" } do |f| %>
    <div class="form-group">
    <%=f.label :title, class: "control-label col-sm-1" %>
    <div class="col-sm-9">
      <%=f.text_field :title, class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%=f.label :description, class: "control-label col-sm-1" %>
    <div class="col-sm-9">
      <%=f.text_area :description, :rows => 2, :cols => 30, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%=f.label :starttime, 'Start Time', class: "control-label col-sm-1" %>
    <div class="col-sm-9">
      <%=f.datetime_select :starttime, order: [:month, :day, :year], ampm: true, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%=f.label :endtime, 'End Time', class: "control-label" %>
    <div class="col-sm-9">
      <%=f.datetime_select :endtime, order: [:month, :day, :year], ampm: true, class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%=f.label :all_day, class: "control-label col-sm-1" %>
    <div class="col-sm-9">
      <%=f.check_box :all_day %>
    </div>
  </div>

  <%=f.hidden_field :commit_button, :value => ""%>
  <%#<p>%>
  <%if @event.event_series -%>
    <%=f.submit 'Update Only This Occurrence', class: "btn btn-primary btn-block", :onclick => "document.getElementById('event_commit_button').value = this.value"%>
  <%=f.submit 'Update All Occurrence', class: "btn btn-primary btn-block", :onclick => "document.getElementById('event_commit_button').value = this.value"%>
  <%=f.submit 'Update All Following Occurrence', class: "btn btn-primary btn-block", :onclick => "document.getElementById('event_commit_button').value = this.value"%>
<%else-%>
    <%=f.submit 'Update', class: "btn btn-primary btn-block", :onclick => "document.getElementById('event_commit_button').value = this.value"%>
<%end-%>

  <span id = "updating_events" class="spinner" style = "display:none;">Updating, Please wait...</span>
  <%#</p>%>
<%end %>
</div>
